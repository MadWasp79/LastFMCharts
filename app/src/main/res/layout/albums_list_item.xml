<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:layout_marginLeft="12dp"
  android:layout_marginRight="12dp"
  android:layout_marginTop="4dp"
  android:layout_marginBottom="2dp"
  android:background="@drawable/rounded_colors_bg"
  android:elevation="8dp"

  >

  <ImageView
    android:id="@+id/iv_album_list"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_margin="4dp"
    app:srcCompat="@drawable/ic_artist_72dp"/>


  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_weight="3"
    android:layout_marginLeft="4dp">


    <TextView
      android:id="@+id/tv_charts_album_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="4dp"
      android:maxLines="1"
      android:textAllCaps="true"
      android:textColor="@color/colorAccent"
      android:textSize="18sp"
      tools:text="Album Name"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="playcount"/>

      <TextView
        android:id="@+id/tv_charts_album_listeners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        tools:text="12345678"/>

    </LinearLayout>
  </LinearLayout>

</LinearLayout>