<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:layout_marginLeft="12dp"
  android:layout_marginRight="12dp"
  android:layout_marginTop="2dp"
  android:layout_marginBottom="2dp"
  android:background="@drawable/rounded_colors_bg"
  android:elevation="8dp"

  >

  <ImageView
    android:id="@+id/iv_charts_artist"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_margin="4dp"
    app:srcCompat="@drawable/ic_artist_72dp"/>


  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_weight="3"
    android:layout_marginLeft="4dp">


    <TextView
      android:id="@+id/tv_charts_artist_name"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="4dp"
      android:textColor="@color/item_text_color"
      android:textSize="20sp"
      tools:text="#1: Artist Name"
      android:maxLines="1"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listeners_sign"
        android:layout_marginRight="4dp"/>

      <TextView
        android:id="@+id/tv_charts_artist_listeners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/item_text_color"
        tools:text="12345678"/>

    </LinearLayout>
  </LinearLayout>

</LinearLayout>